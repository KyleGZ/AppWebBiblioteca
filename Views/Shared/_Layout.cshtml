                        if (res.success) {
                            mostrarToastExito(res.message || "Notificaciones eliminadas correctamente");
                            cargarNotificaciones();
                            cargarContadorNotificacionesGlobal();
                        } else {
                            mostrarToastError(res.message || "No se pudieron eliminar las notificaciones");
                        }
                    })
                    .catch(err => {
                        console.error('Error:', err);
                        mostrarToastError("Error inesperado al eliminar notificaciones");
                    })
                    .finally(() => {
                        btnEliminarTodas.disabled = false;
                        btnEliminarTodas.innerHTML = originalText;
                    });
                });
            }
        }


        // 3. Función GLOBAL para marcar una notificación como leída
        window.marcarComoLeida = function(idNotificacion) {
            console.log('✅ marcarComoLeida llamada con ID:', idNotificacion);

            // Mostrar feedback visual inmediato
            const btn = document.querySelector(`[data-id="${idNotificacion}"]`);
            if (btn) {
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Procesando...';
            }

            
                    fetch(`/Notificacion/MarcarComoLeida?idNotificacion=${idNotificacion}`, {
            method: 'POST'
        })

            .then(response => {
                if (!response.ok) {
                    throw new Error(`Error HTTP: ${response.status}`);
                }
                return response.json();
            })
            .then(res => {
                console.log('Respuesta del servidor:', res);
                if (res.success) {
                    console.log('Notificación marcada como leída');
                    // Usar toast en lugar de modal
                    mostrarToastExito(res.message || "Notificación marcada como leída");

                    // Recargar las notificaciones
                    cargarNotificaciones();
                    // Actualizar contador global
                    cargarContadorNotificacionesGlobal();
                } else {
                    mostrarToastError(res.message || "Error al marcar como leída"); //Muestra esto
                    // Revertir estado del botón en caso de error
                    if (btn) {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-check me-1"></i>Marcar leída';
                    }
                }
            })
            .catch(err => {
                console.error('Error:', err);
                mostrarToastError("Error inesperado al marcar como leída");
                // Revertir estado del botón en caso de error
                if (btn) {
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-check me-1"></i>Marcar leída';
                }
            });
        }

        // 4. Función global para cargar contador
        function cargarContadorNotificacionesGlobal() {
            fetch("/Notificacion/ObtenerNotificaciones")
                .then(response => response.json())
                .then(res => {
                    if (res.success && res.data) {
                        const notificacionCounter = document.getElementById('notificacionCounter');
                        if (notificacionCounter) {
                            const noLeidas = res.data.filter(n =>
                                n.estado === 'No leída' || n.estado === 'Pendiente'
                            ).length;
                            notificacionCounter.textContent = noLeidas;
                            notificacionCounter.style.display = noLeidas === 0 ? 'none' : 'inline';
                        }
                    }
                })
                .catch(err => {
                    console.error('Error al cargar contador:', err);
                });
        }

        // --------------------------
        // FUNCIONES TOAST (para evitar conflictos con modales)
        // --------------------------
        function mostrarToastExito(mensaje) {
            mostrarToast(mensaje, 'success');
        }

        function mostrarToastError(mensaje) {
            mostrarToast(mensaje, 'error');
        }

        function mostrarToast(mensaje, tipo = 'info') {
            const toastContainer = document.getElementById('toastContainer');
            if (!toastContainer) {
                console.log('Toast:', mensaje);
                return;
            }

            const toastId = 'toast-' + Date.now();
            const bgColor = tipo === 'success' ? 'bg-success' :
                           tipo === 'error' ? 'bg-danger' : 'bg-info';

            const toastHTML = `
                <div id="${toastId}" class="toast align-items-center text-white ${bgColor} border-0" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="fas ${tipo === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle'} me-2"></i>
                            ${mensaje}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;

            toastContainer.insertAdjacentHTML('beforeend', toastHTML);

            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement, { delay: 4000 });
            toast.show();

            // Remover el toast del DOM cuando se oculte
            toastElement.addEventListener('hidden.bs.toast', function() {
                toastElement.remove();
            });
        }

        // Función auxiliar para escapar HTML
        function escapeHtml(unsafe) {
            if (!unsafe) return '';
            return unsafe
                .toString()
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }
