@model PaginacionResponse<AppWebBiblioteca.Models.SeccionDto>

@{
    // No Layout: es un partial que se carga dentro de SociosLectores
    var items = Model?.Data ?? new List<AppWebBiblioteca.Models.SeccionDto>();
    var pag = Model?.Pagination ?? new PaginationInfo();
    var termino = ViewBag.TerminoBusqueda as string ?? "";
    var returnUrl = Url.Action("Index", "SociosLectores", new { tab = "secciones" });
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">
        <i class="fas fa-layer-group me-2"></i> Secciones
    </h5>
    @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
    {
        <button type="button" class="btn btn-autores-primary" data-bs-toggle="modal" data-bs-target="#modalAgregarSeccion">
            <i class="fas fa-plus"></i> Nueva Sección
        </button>
    }
</div>

<!-- Búsqueda -->
<form method="get" id="searchFormSecciones" action="@Url.Action("Tab","Seccion")" class="mb-3">
    <div class="input-group">
        <span class="input-group-text bg-light"><i class="fas fa-search text-muted"></i></span>
        <input name="termino" id="searchInputSecciones" class="form-control" placeholder="Buscar por nombre..." value="@termino" />
        <button class="btn btn-esparza-primary" id="btnBuscarSecciones" type="submit">
            <i class="fas fa-search me-1"></i> Buscar
        </button>
    </div>

    <input type="hidden" name="pagina" id="paginaHiddenSecciones" value="@pag.PaginaActual" />
    <input type="hidden" name="resultadosPorPagina" id="rppHiddenSecciones" value="@pag.ResultadosPorPagina" />
</form>

<!-- Info -->
<div class="text-muted small mb-2">
    <span>@(pag.TotalResultados)</span>
    <span>@(string.IsNullOrWhiteSpace(termino) ? "sección(es) registradas" : $"sección(es) encontradas para \"{termino}\"")</span>
</div>

@if (items.Any())
{
    <div class="table-responsive">
        <table class="table table-autores">
            <thead>
                <tr>
                    <th>Nombre</th>
                    @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                    {
                        <th class="text-center" style="width:220px;">Acciones</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var s in items)
                {
                    <tr>
                        <td><i class="fas fa-layer-group me-2 text-muted"></i>@s.Nombre</td>
                        <td class="text-center">
                            @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                            {
                                <div class="btn-actions-group justify-content-center">
                                    <button type="button"
                                            class="btn btn-action btn-action-edit"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalEditarSeccion"
                                            data-id="@s.IdSeccion"
                                            data-nombre="@s.Nombre">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-action btn-action-deactivate"
                                            data-bs-toggle="modal"
                                            data-bs-target="#modalEliminarSeccion"
                                            data-id="@s.IdSeccion"
                                            data-nombre="@s.Nombre">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    @if (pag.TotalPaginas > 1)
    {
        <ul class="pagination pagination-sm mt-3">
            <li class="page-item @(pag.PaginaActual == 1 ? "disabled" : "")">
                <a href="#" class="page-link js-page" data-page="1" title="Primera"><i class="fas fa-angle-double-left"></i></a>
            </li>
            <li class="page-item @(pag.PaginaActual == 1 ? "disabled" : "")">
                <a href="#" class="page-link js-page" data-page="@(pag.PaginaActual - 1)" title="Anterior"><i class="fas fa-chevron-left"></i></a>
            </li>

            @{
                var ini = Math.Max(1, pag.PaginaActual - 2);
                var fin = Math.Min(pag.TotalPaginas, pag.PaginaActual + 2);
            }
            @for (int i = ini; i <= fin; i++)
            {
                <li class="page-item @(i == pag.PaginaActual ? "active" : "")">
                    <a href="#" class="page-link js-page" data-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(pag.PaginaActual >= pag.TotalPaginas ? "disabled" : "")">
                <a href="#" class="page-link js-page" data-page="@(pag.PaginaActual + 1)" title="Siguiente"><i class="fas fa-chevron-right"></i></a>
            </li>
            <li class="page-item @(pag.PaginaActual >= pag.TotalPaginas ? "disabled" : "")">
                <a href="#" class="page-link js-page" data-page="@pag.TotalPaginas" title="Última"><i class="fas fa-angle-double-right"></i></a>
            </li>

            <!-- Select RPP sin C# en atributos -->
            <li class="ms-2">
                @{
                    var rpp = pag.ResultadosPorPagina;
                }
                <select class="form-select form-select-sm d-inline-block w-auto" name="resultadosPorPagina" id="rppSelectSecciones">
                    @if (rpp == 20)
                    {
                        <option value="20" selected>20</option>
                    }
                    else
                    {
                        <option value="20">20</option>
                    }
                    @if (rpp == 50)
                    {
                        <option value="50" selected>50</option>
                    }
                    else
                    {
                        <option value="50">50</option>
                    }
                    @if (rpp == 100)
                    {
                        <option value="100" selected>100</option>
                    }
                    else
                    {
                        <option value="100">100</option>
                    }
                </select>
            </li>
        </ul>
    }
}
else
{
    <div class="text-center text-muted py-4">
        <i class="fas fa-search fa-2x mb-2"></i>
        <div>No hay secciones registradas.</div>
    </div>
}

<!-- ======================= MODALES ======================= -->
<!-- Agregar -->
<div class="modal fade" id="modalAgregarSeccion" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus me-2"></i>Agregar Sección</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Crear" asp-controller="Seccion" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input name="nombre" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-autores-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-autores-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Editar -->
<div class="modal fade" id="modalEditarSeccion" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Editar Sección</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Editar" asp-controller="Seccion" method="post" id="formEditarSeccion">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <input type="hidden" id="editarIdSeccion" name="idSeccion" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input id="editarNombreSeccion" name="nombre" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-autores-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-autores-primary">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Eliminar -->
<div class="modal fade" id="modalEliminarSeccion" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-trash-alt me-2"></i>Eliminar Sección</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Eliminar" asp-controller="Seccion" method="post" id="formEliminarSeccion">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <input type="hidden" id="eliminarIdSeccion" name="idSeccion" />
                <div class="modal-body text-center">
                    <p>¿Eliminar la sección <strong id="nombreSeccionEliminar"></strong>?</p>
                    <p class="text-muted small"><i class="fas fa-info-circle me-1"></i>Esta acción no se puede deshacer.</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-autores-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-action-deactivate"><i class="fas fa-trash-alt me-2"></i>Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
