@model PaginacionResponse<AppWebBiblioteca.Models.GeneroDto>

@{
    // Partial (sin Layout)
    var items = Model?.Data ?? new List<AppWebBiblioteca.Models.GeneroDto>();
    var pag = Model?.Pagination ?? new PaginationInfo();
    var termino = ViewBag.TerminoBusqueda as string ?? "";
    var returnUrl = Url.Action("Index", "SociosLectores", new { tab = "generos" });
}

<!-- Header + botón -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">
        <i class="fas fa-tag me-2"></i> Géneros
    </h5>

    <button type="button" class="btn btn-autores-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalAgregarGenero">
        <i class="fas fa-plus"></i> Nuevo Género
    </button>
</div>

<!-- Búsqueda -->
<form method="get" id="searchFormGeneros" action="@Url.Action("Tab","Genero")" class="mb-3">
    <div class="input-group">
        <span class="input-group-text bg-light"><i class="fas fa-search text-muted"></i></span>
        <input name="termino" id="searchInputGeneros" class="form-control" placeholder="Buscar por nombre..." value="@termino" />
        <button class="btn btn-esparza-primary" id="btnBuscarGeneros" type="submit">
            <i class="fas fa-search me-1"></i> Buscar
        </button>
    </div>

    <input type="hidden" name="pagina" id="paginaHiddenGeneros" value="@pag.PaginaActual" />
    <input type="hidden" name="resultadosPorPagina" id="rppHiddenGeneros" value="@pag.ResultadosPorPagina" />
</form>

<!-- Info -->
<div class="text-muted small mb-2">
    <span>@(pag.TotalResultados)</span>
    <span>@(string.IsNullOrWhiteSpace(termino) ? "género(s) registrados" : $"género(s) encontrados para \"{termino}\"")</span>
</div>

<!-- Tabla -->
@if (items.Any())
{
    <div class="table-responsive">
        <table class="table table-autores">
            <thead>
                <tr>
                    <th style="width:120px;">ID</th>
                    <th>Nombre</th>
                    <th class="text-center" style="width:220px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var g in items)
                {
                    <tr>
                        <td class="fw-bold">#@g.IdGenero</td>
                        <td><i class="fas fa-tag me-2 text-muted"></i>@g.Nombre</td>
                        <td class="text-center">
                            <div class="btn-actions-group justify-content-center">
                                <!-- Editar -->
                                <button type="button" class="btn btn-action btn-action-edit"
                                        data-bs-toggle="modal" data-bs-target="#modalEditarGenero"
                                        data-id="@g.IdGenero" data-nombre="@g.Nombre"
                                        title="Editar Género">
                                    <i class="fas fa-edit icon-elegant"></i>
                                </button>

                                <!-- Eliminar -->
                                <button type="button" class="btn btn-action btn-action-deactivate"
                                        data-bs-toggle="modal" data-bs-target="#modalEliminarGenero"
                                        data-id="@g.IdGenero" data-nombre="@g.Nombre"
                                        title="Eliminar Género">
                                    <i class="fas fa-trash-alt icon-elegant"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación compacta -->
    @if (pag.TotalPaginas > 1)
    {
        <ul class="pagination pagination-sm mt-3">
            <li class="page-item @(pag.PaginaActual == 1 ? "disabled" : "")">
                <a href="#" class="page-link js-page" data-page="1" title="Primera"><i class="fas fa-angle-double-left"></i></a>
            </li>
            <li class="page-item @(pag.PaginaActual == 1 ? "disabled" : "")">
                <a href="#" class="page-link js-page" data-page="@(pag.PaginaActual - 1)" title="Anterior"><i class="fas fa-chevron-left"></i></a>
            </li>

            @{
                var ini = Math.Max(1, pag.PaginaActual - 2);
                var fin = Math.Min(pag.TotalPaginas, pag.PaginaActual + 2);
            }
            @for (int i = ini; i <= fin; i++)
            {
                <li class="page-item @(i == pag.PaginaActual ? "active" : "")">
                    <a href="#" class="page-link js-page" data-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(pag.PaginaActual >= pag.TotalPaginas ? "disabled" : "")">
                <a href="#" class="page-link js-page" data-page="@(pag.PaginaActual + 1)" title="Siguiente"><i class="fas fa-chevron-right"></i></a>
            </li>
            <li class="page-item @(pag.PaginaActual >= pag.TotalPaginas ? "disabled" : "")">
                <a href="#" class="page-link js-page" data-page="@pag.TotalPaginas" title="Última"><i class="fas fa-angle-double-right"></i></a>
            </li>

            <li class="ms-2">
                @{
                    var rpp = pag.ResultadosPorPagina;
                }
                <select class="form-select form-select-sm d-inline-block w-auto" name="resultadosPorPagina">
                    @if (rpp == 20)
                    {
                        <option value="20" selected>20</option>
                    }
                    else
                    {
                        <option value="20">20</option>
                    }
                    @if (rpp == 50)
                    {
                        <option value="50" selected>50</option>
                    }
                    else
                    {
                        <option value="50">50</option>
                    }
                    @if (rpp == 100)
                    {
                        <option value="100" selected>100</option>
                    }
                    else
                    {
                        <option value="100">100</option>
                    }
                </select>
            </li>
        </ul>
    }
}
else
{
    <div class="text-center text-muted py-4">
        <i class="fas fa-search fa-2x mb-2"></i>
        <div>No hay géneros que coincidan.</div>
    </div>
}

<!-- ======================= MODALES ======================= -->
<!-- Modal Agregar -->
<div class="modal fade" id="modalAgregarGenero" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus me-2"></i>Agregar Género</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Crear" asp-controller="Genero" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label"><i class="fas fa-signature me-1"></i>Nombre</label>
                        <input name="nombre" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-autores-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-autores-primary">
                        <i class="fas fa-save me-1"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="modalEditarGenero" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Editar Género</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Editar" asp-controller="Genero" method="post" id="formEditarGenero">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <input type="hidden" id="editarIdGenero" name="idGenero" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label"><i class="fas fa-signature me-1"></i>Nombre</label>
                        <input id="editarNombreGenero" name="nombre" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-autores-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-autores-primary">
                        <i class="fas fa-save me-1"></i>Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Eliminar -->
<div class="modal fade" id="modalEliminarGenero" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-trash-alt me-2"></i>Eliminar Género</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Eliminar" asp-controller="Genero" method="post" id="formEliminarGenero">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <input type="hidden" id="eliminarIdGenero" name="idGenero" />
                <div class="modal-body text-center">
                    <p>Está a punto de eliminar el género:</p>
                    <h6 class="text-danger mb-0" id="nombreGeneroEliminar"></h6>
                    <p class="text-muted small mt-2"><i class="fas fa-info-circle me-1"></i>Esta acción no se puede deshacer.</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-autores-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-action-deactivate">
                        <i class="fas fa-trash-alt me-1"></i>Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
