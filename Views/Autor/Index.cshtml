@model PaginacionResponse<AppWebBiblioteca.Models.AutorDto>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Gestión de Autores - Biblioteca Esparza";
    ViewData["PageTitle"] = "Gestión de Autores";

    var autores = Model?.Data ?? new List<AppWebBiblioteca.Models.AutorDto>();
    var paginacion = Model?.Pagination ?? new PaginationInfo();
    var terminoBusqueda = ViewBag.TerminoBusqueda as string ?? "";
}

<div class="container-fluid p-4">
    <div class="row justify-content-center fade-in-autores">
        <div class="col-12">
            <div class="card autores-card">
                <div class="card-body p-4">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="mb-1">
                                <i class="fas fa-feather-alt me-2" style="color: var(--esparza-blue);"></i>
                                Autores
                            </h2>
                            <p class="text-muted mb-0">Administra los autores disponibles para asociar a los libros</p>
                        </div>
                        @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                        {
                            <button type="button" class="btn btn-autores-primary" data-bs-toggle="modal" data-bs-target="#modalAgregarAutor">
                                <i class="fas fa-user-plus"></i>
                                Nuevo Autor
                            </button>
                        }
                    </div>

                    <!-- Búsqueda -->
                    <form asp-action="Index" method="get" class="search-filter-section mb-4" id="searchForm">
                        <div class="row g-3">
                            <div class="col-12 col-xl-8">
                                <div class="search-container">
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-search text-muted"></i>
                                        </span>
                                        <input type="text"
                                        class="form-control"
                                        name="termino"
                                        id="searchInput"
                                        placeholder="Buscar por nombre de autor..."
                                        value="@terminoBusqueda" />
                                        <button class="btn btn-esparza-primary" type="submit" id="btnBuscar">
                                            <i class="fas fa-search me-1"></i>Buscar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Campos ocultos para paginación -->
                        <input type="hidden" name="pagina" id="paginaHidden" value="@paginacion.PaginaActual" />
                        <input type="hidden" name="resultadosPorPagina" id="resultadosPorPaginaHidden" value="@paginacion.ResultadosPorPagina" />
                    </form>

                    <!-- Info resultados -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="text-muted small">
                            @if (!string.IsNullOrEmpty(terminoBusqueda))
                            {
                                <span id="resultCount">@paginacion.TotalResultados</span>
                                <span>autor(es) encontrados para "@terminoBusqueda"</span>
                            }
                            else
                            {
                                <span id="resultCount">@paginacion.TotalResultados</span>
                                <span>autor(es) registrados</span>
                            }
                        </div>
                        <div class="d-flex gap-2">
                            @if (!string.IsNullOrEmpty(terminoBusqueda))
                            {
                                <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i>Limpiar búsqueda
                                </a>
                            }
                        </div>
                    </div>

                    <!-- Alertas -->
                    @if (TempData["Ok"] != null)
                    {
                        <div class="alert alert-success-autores alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Ok"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger-autores alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Tabla -->
                    @if (autores.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-autores">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                                        {
                                            <th class="text-center" style="width:220px;">Acciones</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var a in autores)
                                    {
                                        <tr class="zoom-in">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-pen me-2 text-muted"></i>
                                                    @a.Nombre
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                                                {
                                                    <div class="btn-actions-group justify-content-center">
                                                        <!-- Editar -->
                                                        <button type="button" class="btn btn-action btn-action-edit"
                                                                data-bs-toggle="modal" data-bs-target="#modalEditarAutor"
                                                                data-id="@a.IdAutor"
                                                                data-nombre="@a.Nombre"
                                                                title="Editar Autor">
                                                            <i class="fas fa-edit icon-elegant"></i>
                                                        </button>

                                                        <!-- Eliminar -->
                                                        <button type="button" class="btn btn-action btn-action-deactivate"
                                                                data-bs-toggle="modal" data-bs-target="#modalEliminarAutor"
                                                                data-id="@a.IdAutor"
                                                                data-nombre="@a.Nombre"
                                                                title="Eliminar Autor">
                                                            <i class="fas fa-trash-alt icon-elegant"></i>
                                                        </button>
                                                    </div>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Paginación -->
                        @if (paginacion.TotalPaginas > 1)
                        {
                            <nav aria-label="Paginación de resultados" class="mt-4">
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">

                                    <!-- Info -->
                                    <div class="pagination-info">
                                        <small class="text-muted">
                                            Mostrando <strong>@autores.Count</strong> de
                                            <strong>@paginacion.TotalResultados.ToString("N0")</strong> autores
                                            — Página <strong>@paginacion.PaginaActual</strong> de
                                            <strong>@paginacion.TotalPaginas</strong>
                                        </small>
                                    </div>

                                    <!-- Controles -->
                                    <ul class="pagination justify-content-center mb-0">
                                        <li class="page-item @(paginacion.PaginaActual == 1 ? "disabled" : "")">
                                            @if (paginacion.PaginaActual > 1)
                                            {
                                                <button type="button" class="page-link" title="Primera página" onclick="cambiarPagina(1)">
                                                    <i class="fas fa-angle-double-left"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="page-link"><i class="fas fa-angle-double-left"></i></span>
                                            }
                                        </li>

                                        <li class="page-item @(paginacion.PaginaActual == 1 ? "disabled" : "")">
                                            @if (paginacion.PaginaActual > 1)
                                            {
                                                <button type="button" class="page-link" title="Página anterior" onclick="cambiarPagina(@(paginacion.PaginaActual - 1))">
                                                    <i class="fas fa-chevron-left"></i> Anterior
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="page-link"><i class="fas fa-chevron-left"></i> Anterior</span>
                                            }
                                        </li>

                                        @{
                                            int inicio = Math.Max(1, paginacion.PaginaActual - 2);
                                            int fin = Math.Min(paginacion.TotalPaginas, paginacion.PaginaActual + 2);
                                            if (inicio > 1)
                                            {
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                            }
                                        }

                                        @for (int i = inicio; i <= fin; i++)
                                        {
                                            <li class="page-item @(i == paginacion.PaginaActual ? "active" : "")">
                                                <button type="button" class="page-link @(i == paginacion.PaginaActual ? "fw-bold" : "")" onclick="cambiarPagina(@i)">@i</button>
                                            </li>
                                        }

                                        @if (fin < paginacion.TotalPaginas)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }

                                        <li class="page-item @(paginacion.PaginaActual >= paginacion.TotalPaginas ? "disabled" : "")">
                                            @if (paginacion.PaginaActual < paginacion.TotalPaginas)
                                            {
                                                <button type="button" class="page-link" title="Página siguiente" onclick="cambiarPagina(@(paginacion.PaginaActual + 1))">
                                                    Siguiente <i class="fas fa-chevron-right"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="page-link">Siguiente <i class="fas fa-chevron-right"></i></span>
                                            }
                                        </li>

                                        <li class="page-item @(paginacion.PaginaActual >= paginacion.TotalPaginas ? "disabled" : "")">
                                            @if (paginacion.PaginaActual < paginacion.TotalPaginas)
                                            {
                                                <button type="button" class="page-link" title="Última página" onclick="cambiarPagina(@paginacion.TotalPaginas)">
                                                    <i class="fas fa-angle-double-right"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="page-link"><i class="fas fa-angle-double-right"></i></span>
                                            }
                                        </li>
                                    </ul>

                                    <!-- Tamaño página -->
                                    <div class="pagination-size">
                                        <small class="text-muted me-2">Mostrar:</small>
                                        <select class="form-select form-select-sm d-inline-block w-auto"
                                                onchange="cambiarResultadosPorPagina(this.value)">
                                            @{
                                                var rpp = paginacion.ResultadosPorPagina;
                                            }
                                            <option value="20" selected="@(rpp == 20)">20</option>
                                            <option value="50" selected="@(rpp == 50)">50</option>
                                            <option value="100" selected="@(rpp == 100)">100</option>
                                        </select>
                                    </div>
                                </div>
                            </nav>
                        }
                    }
                    else if (!string.IsNullOrEmpty(terminoBusqueda))
                    {
                        <div class="empty-state text-center py-5">
                            <i class="fas fa-search fa-4x text-muted mb-3"></i>
                            <h4>No se encontraron resultados</h4>
                            <p class="text-muted">No hay autores que coincidan con "@terminoBusqueda"</p>
                            <a href="@Url.Action("Index")" class="btn btn-esparza-primary mt-3">
                                <i class="fas fa-feather me-2"></i>Ver todos los autores
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-user-slash"></i>
                            <h4>No hay autores registrados</h4>
                            <p class="text-muted">Comienza agregando el primer autor para asociarlo a un libro.</p>
                            <button type="button" class="btn btn-autores-primary mt-3" data-bs-toggle="modal" data-bs-target="#modalAgregarAutor">
                                <i class="fas fa-user-plus me-2"></i>Agregar Primer Autor
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Agregar Autor -->
<div class="modal fade modal-autores" id="modalAgregarAutor" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-user-plus me-2"></i>
                    Agregar Nuevo Autor
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Crear" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-group-autores">
                        <label for="nombreAutor" class="form-label-autores">
                            <i class="fas fa-signature"></i> Nombre del Autor
                        </label>
                        <input type="text" class="form-control form-control-autores" id="nombreAutor" name="nombre" required placeholder="Ingrese el nombre">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-autores-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-autores-primary">
                        <i class="fas fa-save me-2"></i>Guardar Autor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Editar Autor -->
<div class="modal fade modal-autores" id="modalEditarAutor" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit me-2"></i>
                    Editar Autor
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Editar" method="post" id="formEditarAutor">
                @Html.AntiForgeryToken()
                <input type="hidden" id="editarIdAutor" name="idAutor" />
                <div class="modal-body">
                    <div class="form-group-autores">
                        <label for="editarNombreAutor" class="form-label-autores">
                            <i class="fas fa-signature"></i> Nombre del Autor
                        </label>
                        <input type="text" class="form-control form-control-autores" id="editarNombreAutor" name="nombre" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-autores-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-autores-primary">
                        <i class="fas fa-save me-2"></i>Actualizar Autor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Eliminar Autor -->
<div class="modal fade modal-autores" id="modalEliminarAutor" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-trash-alt me-2"></i>
                    Eliminar Autor
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Eliminar" method="post" id="formEliminarAutor">
                @Html.AntiForgeryToken()
                <input type="hidden" id="eliminarIdAutor" name="idAutor">
                <div class="modal-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                        <h5>¿Eliminar Autor?</h5>
                    </div>
                    <p>Está a punto de eliminar al autor:</p>
                    <h6 class="text-danger mb-0" id="nombreAutorEliminar"></h6>
                    <p class="text-muted small mt-2">
                        <i class="fas fa-info-circle me-1"></i>
                        Esta acción no se puede deshacer.
                    </p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-autores-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-action-deactivate">
                        <i class="fas fa-trash-alt me-2"></i>Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const searchForm  = document.getElementById('searchForm');
            const btnBuscar   = document.getElementById('btnBuscar');
            const paginaHidden = document.getElementById('paginaHidden');

            function submitSearch() {
                if (paginaHidden) paginaHidden.value = 1; // Reinicia a página 1 en cada búsqueda
                if (searchForm) searchForm.submit();
            }

            if (searchInput) {
                let typingTimer;
                const delay = 500; // ms

                // Enviar automáticamente tras dejar de teclear
                searchInput.addEventListener('input', function () {
                    clearTimeout(typingTimer);
                    typingTimer = setTimeout(() => submitSearch(), delay);
                });

                // Bloquear Enter para no duplicar submits
                searchInput.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') e.preventDefault();
                });
            }

            // Botón Buscar (compatibilidad)
            if (btnBuscar) {
                btnBuscar.addEventListener('click', function (e) {
                    e.preventDefault();
                    submitSearch();
                });
            }

            //  PAGINACIÓN
            window.cambiarPagina = function (pagina) {
                if (paginaHidden && searchForm) {
                    paginaHidden.value = pagina;
                    searchForm.submit();
                }
            };

            window.cambiarResultadosPorPagina = function (resultados) {
                if (!searchForm) return;

                let resultadosInput = document.getElementById('resultadosPorPaginaHidden');
                if (!resultadosInput) {
                    resultadosInput = document.createElement('input');
                    resultadosInput.type = 'hidden';
                    resultadosInput.name = 'resultadosPorPagina';
                    resultadosInput.id = 'resultadosPorPaginaHidden';
                    searchForm.appendChild(resultadosInput);
                }
                resultadosInput.value = resultados;

                if (paginaHidden) paginaHidden.value = 1;
                searchForm.submit();
            };

            // MODAL EDITAR
            const modalEditar = document.getElementById('modalEditarAutor');
            if (modalEditar) {
                modalEditar.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const id     = button.getAttribute('data-id');
                    const nombre = button.getAttribute('data-nombre');

                    document.getElementById('editarIdAutor').value = id;
                    document.getElementById('editarNombreAutor').value = nombre;
                });
            }

            // MODAL ELIMINAR
            const modalEliminar = document.getElementById('modalEliminarAutor');
            if (modalEliminar) {
                modalEliminar.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const id     = button.getAttribute('data-id');
                    const nombre = button.getAttribute('data-nombre');

                    document.getElementById('eliminarIdAutor').value = id;
                    document.getElementById('nombreAutorEliminar').textContent = nombre;
                });
            }
        });
    </script>
}
