@model ResetPasswordRequest
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restablecer Contraseña - Biblioteca Esparza</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Stylesheet Login -->
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
</head>
<body class="login-body">
    <!-- Efecto de partículas -->
    <div class="login-particles" id="particles"></div>

    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card login-card fade-in-login">
                    <!-- Header -->
                    <div class="login-header">
                        <div class="login-icon">
                            <i class="fas fa-key"></i>
                        </div>
                        <h1 class="login-title">BIBLIOTECA ESPARZA</h1>
                        <p class="login-subtitle">Municipalidad de Esparza</p>
                        <p class="login-subtitle">Nueva Contraseña</p>
                    </div>

                    <!-- Body -->
                    <div class="login-body-content">
                        <h3 class="login-form-title">
                            <i class="fas fa-lock me-2"></i>Crear Nueva Contraseña
                        </h3>

                        <!-- Instrucciones -->
                        <div class="alert alert-info-login instructions-alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Ingresa tu nueva contraseña. Debe tener al menos 6 caracteres.
                        </div>

                        <!-- Alertas -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success-login alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger-login alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <!-- Formulario -->
                        <form asp-action="ResetPassword" asp-controller="Usuario" method="post" id="resetPasswordForm">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Token" />

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger-login"></div>

                            <!-- Nueva Contraseña -->
                            <div class="form-group-login">
                                <label asp-for="NewPassword" class="form-label-login">
                                    <i class="fas fa-lock"></i>Nueva Contraseña
                                </label>
                                <input asp-for="NewPassword" type="password" class="form-control form-control-login"
                                       placeholder="Ingresa tu nueva contraseña" autocomplete="new-password">
                                <span asp-validation-for="NewPassword" class="invalid-feedback"></span>
                            </div>

                            <!-- Confirmar Contraseña -->
                            <div class="form-group-login">
                                <label asp-for="ConfirmPassword" class="form-label-login">
                                    <i class="fas fa-lock"></i>Confirmar Contraseña
                                </label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-login"
                                       placeholder="Confirma tu nueva contraseña" autocomplete="new-password">
                                <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                            </div>

                            <!-- Botón de Envío -->
                            <button type="submit" class="btn btn-login mb-3">
                                <i class="fas fa-save me-2"></i>Restablecer Contraseña
                            </button>

                            <!-- Links adicionales -->
                            <div class="login-links">
                                <a asp-action="Login" asp-controller="Usuario" class="login-link">
                                    <i class="fas fa-arrow-left me-1"></i>Volver al Inicio de Sesión
                                </a>
                            </div>
                        </form>
                    </div>

                    <!-- Footer -->
                    <div class="login-footer">
                        <p class="login-footer-text">
                            <i class="fas fa-shield-alt me-1"></i>
                            &copy; 2024 Biblioteca Pública de Esparza
                        </p>
                        <small class="text-muted">Sistema seguro de gestión bibliotecaria</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Auto-ocultar alertas después de 5 segundos (excepto las instrucciones)
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert.alert-dismissible');
            alerts.forEach(function(alert) {
                if (!alert.classList.contains('instructions-alert')) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            });
        }, 5000);

        // Validación del formulario - VERSIÓN CORREGIDA
        $(document).ready(function() {
            console.log('Inicializando formulario...');

            var formSubmitted = false;

            $('#resetPasswordForm').validate({
                errorClass: 'is-invalid',
                validClass: 'is-valid',
                errorPlacement: function(error, element) {
                    error.addClass('invalid-feedback');
                    element.after(error);
                },
                highlight: function(element, errorClass, validClass) {
                    $(element).addClass(errorClass).removeClass(validClass);
                },
                unhighlight: function(element, errorClass, validClass) {
                    $(element).removeClass(errorClass).addClass(validClass);
                },
                rules: {
                    NewPassword: {
                        required: true,
                        minlength: 6
                    },
                    ConfirmPassword: {
                        required: true,
                        equalTo: "#NewPassword"
                    }
                },
                messages: {
                    NewPassword: {
                        required: "La nueva contraseña es obligatoria",
                        minlength: "La contraseña debe tener al menos 6 caracteres"
                    },
                    ConfirmPassword: {
                        required: "La confirmación de contraseña es obligatoria",
                        equalTo: "Las contraseñas no coinciden"
                    }
                },
                // Prevenir submit automático
                onsubmit: true,
                onkeyup: false,
                onfocusout: false,
                onclick: false
            });

            //PREVENIR SUBMIT AUTOMÁTICO
            $('#resetPasswordForm').on('submit', function(e) {
                console.log('Formulario siendo enviado manualmente...');

                // Solo procesar si el usuario hizo click
                if (!formSubmitted) {
                    formSubmitted = true;
                    return true; // Permitir envío normal
                } else {
                    console.log('Bloqueando re-envío automático');
                    e.preventDefault();
                    return false;
                }
            });

            // DESHABILITAR ENTER PARA PREVENIR SUBMIT ACCIDENTAL
            $('#resetPasswordForm').on('keypress', function(e) {
                if (e.which === 13) { // Tecla Enter
                    console.log('Enter presionado - previniendo submit automático');
                    e.preventDefault();
                    return false;
                }
            });
        });

        // Efecto de partículas simples
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 15;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'login-particle';

                const size = Math.random() * 6 + 2;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;

                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;

                particle.style.animationDelay = `${Math.random() * 15}s`;
                particle.style.animationDuration = `${Math.random() * 10 + 10}s`;

                particlesContainer.appendChild(particle);
            }
        }

        document.addEventListener('DOMContentLoaded', createParticles);
    </script>
</body>
</html>