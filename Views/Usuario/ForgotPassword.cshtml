@model ForgotPassword
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recuperar Contraseña - Biblioteca Esparza</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Stylesheet Login -->
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

    <style>
        /* Estilo para alerta informativa fija */
        .alert-info-login {
            background: linear-gradient(135deg, rgba(30, 58, 138, 0.1) 0%, rgba(30, 58, 138, 0.05) 100%);
            border-left-color: var(--esparza-blue);
            color: #1e3a8a;
            border: none;
            border-radius: 12px;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
            border-left: 4px solid;
        }

        /* Remover la clase alert-dismissible del mensaje de instrucciones */
        .instructions-alert {
            margin-bottom: 1.5rem !important;
        }
    </style>
</head>
<body class="login-body">
    <!-- Efecto de partículas -->
    <div class="login-particles" id="particles"></div>

    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card login-card fade-in-login">
                    <!-- Header -->
                    <div class="login-header">
                        <div class="login-icon">
                            <i class="fas fa-key"></i>
                        </div>
                        <h1 class="login-title">BIBLIOTECA ESPARZA</h1>
                        <p class="login-subtitle">Municipalidad de Esparza</p>
                        <p class="login-subtitle">Recuperar Contraseña</p>
                    </div>

                    <!-- Body -->
                    <div class="login-body-content">
                        <h3 class="login-form-title">
                            <i class="fas fa-unlock-alt me-2"></i>Restablecer Contraseña
                        </h3>

                        <!-- Instrucciones FIJAS - No desaparece -->
                        <div class="alert alert-info-login instructions-alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña.
                        </div>

                        <!-- Alertas (estas sí pueden desaparecer) -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success-login alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger-login alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <!-- Formulario -->
                        <form asp-action="ForgotPassword" asp-controller="Usuario" method="post" id="forgotPasswordForm">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger-login"></div>

                            <!-- Email -->
                            <div class="form-group-login">
                                <label asp-for="Email" class="form-label-login">
                                    <i class="fas fa-envelope"></i>Correo Electrónico
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-login"
                                       placeholder="usuario@biblioteca.esparza.cr" autocomplete="email">
                                <span asp-validation-for="Email" class="invalid-feedback"></span>
                            </div>

                            <!-- Botón de Envío -->
                            <button type="submit" class="btn btn-login mb-3">
                                <i class="fas fa-paper-plane me-2"></i>Enviar Enlace de Recuperación
                            </button>

                            <!-- Links adicionales -->
                            <div class="login-links">
                                <a asp-action="Login" asp-controller="Usuario" class="login-link">
                                    <i class="fas fa-arrow-left me-1"></i>Volver al Inicio de Sesión
                                </a>
                            </div>
                        </form>
                    </div>

                    <!-- Footer -->
                    <div class="login-footer">
                        <p class="login-footer-text">
                            <i class="fas fa-shield-alt me-1"></i>
                            &copy; 2024 Biblioteca Pública de Esparza
                        </p>
                        <small class="text-muted">Sistema seguro de gestión bibliotecaria</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Auto-ocultar alertas después de 5 segundos (excepto las instrucciones)
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert.alert-dismissible');
            alerts.forEach(function(alert) {
                // Solo cerrar alertas que sean dismissible y no sean las instrucciones
                if (!alert.classList.contains('instructions-alert')) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            });
        }, 5000);

        // Validación del formulario
        $(document).ready(function() {
            $('#forgotPasswordForm').validate({
                errorClass: 'is-invalid',
                validClass: 'is-valid',
                errorPlacement: function(error, element) {
                    error.addClass('invalid-feedback');
                    element.after(error);
                },
                highlight: function(element, errorClass, validClass) {
                    $(element).addClass(errorClass).removeClass(validClass);
                },
                unhighlight: function(element, errorClass, validClass) {
                    $(element).removeClass(errorClass).addClass(validClass);
                },
                rules: {
                    Email: {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    Email: {
                        required: "El correo electrónico es obligatorio",
                        email: "Por favor ingresa un correo electrónico válido"
                    }
                }
            });
        });

        // Efecto de partículas simples
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 15;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'login-particle';

                // Tamaño aleatorio
                const size = Math.random() * 6 + 2;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;

                // Posición inicial aleatoria
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;

                // Animación con delay aleatorio
                particle.style.animationDelay = `${Math.random() * 15}s`;
                particle.style.animationDuration = `${Math.random() * 10 + 10}s`;

                particlesContainer.appendChild(particle);
            }
        }

        // Inicializar partículas cuando el documento esté listo
        document.addEventListener('DOMContentLoaded', createParticles);
    </script>
</body>
</html>